@model ToyPlanet.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 600px; padding: 20px 0;">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px; border-radius: 1rem; border: 2px solid #e75480;">
        <h2 class="text-center mb-4" style="color: #e75480;">Реєстрація</h2>
        
        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Ім'я користувача</label>
                <input asp-for="Username" class="form-control" placeholder="Ім'я користувача" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Повне ім'я</label>
                <input asp-for="FullName" class="form-control" placeholder="Повне ім'я" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Телефон</label>
                <input asp-for="Phone" class="form-control" placeholder="+380XXXXXXXXX" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль (8-16 символів)" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Підтвердіть пароль</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторіть пароль" style="border-radius: 0.5rem; border: 1px solid #e75480;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn w-100" style="background: #e75480; color: #fff; border-radius: 0.5rem; font-weight: bold;">
                Зареєструватися
            </button>
        </form>
        
        <hr class="my-4">
        
        <p class="text-center">
            Вже маєте обліковий запис? 
            <a href="/Account/Login" style="color: #e75480; text-decoration: none; font-weight: bold;">Увійти</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
